<?xml version="1.0" encoding="utf-8"?>
<MsixPackagingToolTemplate
    xmlns="http://schemas.microsoft.com/msix/packaging/msixpackagingtool/template/2022">
    <Settings
        AllowTelemetry="false"
        ApplyACLsToPackageFiles="true"
        GenerateCommandLineFile="true"
        AllowPromptForPassword="false">
    </Settings>
    <Installer
        Path="querybox"
        Arguments=""
        InstallLocation="C:\Program Files\QueryBox Inc.\QueryBox">
    </Installer>
    <PackageInformation
        PackageName="QueryBox"
        PackageDisplayName="QueryBox"
        PublisherName="CN=QueryBox Inc."
        PublisherDisplayName="QueryBox Inc."
        Version="0.1.0.0"
        PackageDescription="QueryBox is a powerful tool for performing queries on various databases.">
        <Capabilities>
            <Capability Name="runFullTrust" />

        </Capabilities>
        <Applications>
            <Application
                Id="com.querybox.querybox"
                Description="QueryBox is a powerful tool for performing queries on various databases."
                DisplayName="QueryBox"
                ExecutableName="querybox"
                EntryPoint="Windows.FullTrustApplication">

            </Application>
        </Applications>
        <Resources>
            <Resource Language="en-us" />
        </Resources>
        <Dependencies>
            <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.17763.0" MaxVersionTested="10.0.19041.0" />
        </Dependencies>
        <Properties>
            <Framework>false</Framework>
            <DisplayName>QueryBox</DisplayName>
            <PublisherDisplayName>QueryBox Inc.</PublisherDisplayName>
            <Description>QueryBox is a powerful tool for performing queries on various databases.</Description>
            <Logo>Assets\AppIcon.png</Logo>
        </Properties>
    </PackageInformation>
    <SaveLocation PackagePath="querybox.msix" />
    <PackageIntegrity>
        <CertificatePath></CertificatePath>
    </PackageIntegrity>
</MsixPackagingToolTemplate>
